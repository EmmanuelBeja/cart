<div class="row">
   <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
     <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
       {{successMsg}}
     </div>
   </div>
</div>
{{# each products }}
<!--thumbnail code from bootstrap-->
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="..." class="responsive">
      <div class="caption">
        <h3>{{this.title}} </h3>
        <p class="description">{{this.description}}</p>
        <div class="clearfix">
        <div class="price">${{this.price}}</div>
        <div> <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to shoppin Cart</a></div>
      </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each }}
